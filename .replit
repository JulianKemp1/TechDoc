run = "npm install && npm start"
modules = ["nodejs-20"]
hidden = [".config", "package-lock.json"]
entrypoint = "index.html"

[nix]
channel = "stable-24_05"
packages = ["lsof", "nvidia-docker", "run", "psmisc", "util-linux"]

[unitTest]
language = "nodejs"

[deployment]
deploymentTarget = "vm"
build = ["npm", "run", "build"]
publicDir = "dist"
run = ["npm", "run", "start-prod"]

[[ports]]
localPort = 3000
externalPort = 3001

[[ports]]
localPort = 4000
externalPort = 8080

[[ports]]
localPort = 5174
externalPort = 80
exposeLocalhost = true

[[ports]]
localPort = 5500
externalPort = 3000

[[ports]]
localPort = 5000
externalPort = 80

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Full App"

[[workflows.workflow]]
name = "Full App"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm start"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"
